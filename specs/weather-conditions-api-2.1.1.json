{
  "openapi": "2.1.1",
  "info": {
    "title": "Weather Conditions API",
    "version": "2.1.1"
  },
  "webhooks": {
    "getWeather": {
      "post": {
        "requestBody": {
          "description": "Get weather informations",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Weather"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Return a 200 status to indicate that the data was received successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Weather": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        }
      }
    }
  }
}
